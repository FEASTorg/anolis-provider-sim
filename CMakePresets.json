{
  "version": 2,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
        "ENABLE_FLUXGRAPH": "OFF",
        "ENABLE_TSAN": "OFF",
        "ANOLIS_PROTOCOL_DIR": "${sourceDir}/external/anolis-protocol"
      }
    },
    {
      "name": "base-windows-msvc",
      "hidden": true,
      "inherits": "base",
      "generator": "Visual Studio 17 2022",
      "architecture": "x64",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-windows"
      }
    },
    {
      "name": "dev-debug",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "dev-release",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "dev-windows-debug",
      "inherits": "base-windows-msvc",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "dev-windows-release",
      "inherits": "base-windows-msvc",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "dev-release-fluxgraph",
      "inherits": "dev-release",
      "cacheVariables": {
        "ENABLE_FLUXGRAPH": "ON"
      }
    },
    {
      "name": "dev-windows-release-fluxgraph",
      "inherits": "dev-windows-release",
      "cacheVariables": {
        "ENABLE_FLUXGRAPH": "ON"
      }
    },
    {
      "name": "ci-linux-release",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "VCPKG_TARGET_TRIPLET": "x64-linux"
      }
    },
    {
      "name": "ci-windows-release",
      "inherits": "base-windows-msvc",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "ci-linux-release-fluxgraph",
      "inherits": "ci-linux-release",
      "cacheVariables": {
        "ENABLE_FLUXGRAPH": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "dev-debug",
      "configurePreset": "dev-debug"
    },
    {
      "name": "dev-release",
      "configurePreset": "dev-release"
    },
    {
      "name": "dev-windows-debug",
      "configurePreset": "dev-windows-debug",
      "configuration": "Debug"
    },
    {
      "name": "dev-windows-release",
      "configurePreset": "dev-windows-release",
      "configuration": "Release"
    },
    {
      "name": "dev-release-fluxgraph",
      "configurePreset": "dev-release-fluxgraph"
    },
    {
      "name": "dev-windows-release-fluxgraph",
      "configurePreset": "dev-windows-release-fluxgraph",
      "configuration": "Release"
    },
    {
      "name": "ci-linux-release",
      "configurePreset": "ci-linux-release"
    },
    {
      "name": "ci-windows-release",
      "configurePreset": "ci-windows-release",
      "configuration": "Release"
    },
    {
      "name": "ci-linux-release-fluxgraph",
      "configurePreset": "ci-linux-release-fluxgraph"
    }
  ],
  "testPresets": [
    {
      "name": "dev-debug",
      "configurePreset": "dev-debug",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "dev-release",
      "configurePreset": "dev-release",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "dev-windows-debug",
      "configurePreset": "dev-windows-debug",
      "configuration": "Debug",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "dev-windows-release",
      "configurePreset": "dev-windows-release",
      "configuration": "Release",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "dev-release-fluxgraph",
      "configurePreset": "dev-release-fluxgraph",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "dev-windows-release-fluxgraph",
      "configurePreset": "dev-windows-release-fluxgraph",
      "configuration": "Release",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "ci-linux-release",
      "configurePreset": "ci-linux-release",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "ci-windows-release",
      "configurePreset": "ci-windows-release",
      "configuration": "Release",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "ci-linux-release-fluxgraph",
      "configurePreset": "ci-linux-release-fluxgraph",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}
